{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.infra.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e.ts"
  ]
}
